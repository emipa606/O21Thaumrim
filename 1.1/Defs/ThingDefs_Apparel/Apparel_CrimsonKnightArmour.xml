<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CrimsonKnightArmour</defName>
    <label>crimson knight armour</label>
    <description>Overlapping solid plates of armor covering the entire body from neck to feet.</description>
    <graphicData>
      <texPath>Things/Apparel/CrimsonCult/KnightArmour/CrimsonKnightArmour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <costStuffCount>170</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>290</MaxHitPoints>
      <WorkToMake>38000</WorkToMake>
      <Mass>15</Mass>
      <StuffEffectMultiplierArmor>0.73</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.8</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>CCultArmour</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/CrimsonCult/KnightArmour/CrimsonKnightArmour</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>CrimsonCultApparel</li>
      </tags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <!-- <researchPrerequisite>N17_CC_Knight</researchPrerequisite> -->
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
