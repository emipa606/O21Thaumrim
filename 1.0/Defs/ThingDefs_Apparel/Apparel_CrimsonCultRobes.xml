<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CrimsonCultRobes</defName>
    <label>crimson cult robe</label>
    <description>A full body robe, provides comfortable protection from weather and war.</description>
    <graphicData>
      <texPath>Things/Apparel/CrimsonCult/CultistRobes/CrimsonCultRobes</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>10000</WorkToMake>
      <Mass>2.2</Mass>
      <StuffEffectMultiplierArmor>0.6</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.80</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>CCultClothing</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/CrimsonCult/CultistRobes/CrimsonCultRobes</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>CrimsonCultApparel</li>
      </tags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <!-- <researchPrerequisite>N17_CC_Apparel</researchPrerequisite> -->
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="HatMakeableBase">
    <defName>CrimsonCultHood</defName>
    <label>crimson cult hood</label>
    <description>A soft thick hood, provides decent cold protection.</description>
    <graphicData>
      <texPath>Things/Apparel/CrimsonCult/CultistRobes/CrimsonCultHood</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.07</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <thingCategories>
      <li>CCultClothing</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/CrimsonCult/CultistRobes/CrimsonCultHood</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>CrimsonCultApparel</li>
      </tags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <!-- <researchPrerequisite>N17_CC_Apparel</researchPrerequisite> -->
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
</Defs>
